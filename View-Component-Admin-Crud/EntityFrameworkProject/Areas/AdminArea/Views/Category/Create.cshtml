@model Category

@{
    ViewData["Title"] = "Create";
}


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                      
                        <p style="color:darkblue" class="card-description">
                            Category
                        </p>
                        <form asp-controller="Category" asp-action="Create" class="forms-sample" method="post">
                            <div class="form-group">
                                <label for="exampleInputUsername1">Name</label>
                                <input maxlength="" minlength="" type="text" class="form-control" asp-for="Name">
                                <span class="text-danger my-5" asp-validation-for="Name"></span>
                            </div>
                                                
                            <button type="submit" class="btn btn-primary mr-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


